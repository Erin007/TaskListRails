<h1>Edit Task</h1>

<div class="form-new">
<%= form_for @task, url: update_path do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, class:"form-box"%>

  <p></p>

  <%= f.label :description%>
  <%= f.text_area :description, class:"form-box"%>

  <p></p>
  
  <%= f.label :completed%>
  <%= f.text_area :completed, class:"form-box"%>

  <%= f.submit %>

  <%end%>
</div>

